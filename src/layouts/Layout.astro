---
export interface Props {
  title: string;
}

const { title } = Astro.props;
import '@layouts/global.css';
---

<script>
  import persist from "@alpinejs/persist";
  document.addEventListener("alpine:init", () => {
    Alpine.plugin(persist);
  });
</script>

<html
  lang="en"
  x-data="{ colorScheme: $persist('system')}"
  x-bind:class="{'dark': colorScheme === 'dark' || (colorScheme === 'system' && window.matchMedia('(prefers-color-scheme: dark)').matches)}"
>
  <head>
    <meta charset="UTF-8" />
    <link
      rel="icon"
      href="data:image/svg+xml,<svg xmlns='http://www.w3.org/2000/svg'><text x='-15%' y='85%' font-size='30'>🧑‍🚀</text></svg>"
    />
    <link rel="apple-touch-icon" href="/apple-icon-180x180.png" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>
