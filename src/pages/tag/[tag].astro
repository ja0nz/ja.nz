---
import type { FrontMatter, TMenuCard } from "@lib/api";
import { createMenuCard } from "@lib/xform";
import Index from "@components/Index.astro";

/* Static (SSG) Mode */
export async function getStaticPaths() {
  const posts = await Astro.glob<FrontMatter>("../read/**/*.md");
  const dataTag: TMenuCard[] = await createMenuCard(posts);
  return dataTag.map(({ tag }: TMenuCard) => ({ params: { tag } }));
}
const { tag } = Astro.params;
---

<Index tag={tag} />
